entity Report{
    generatedDate Instant required
}

entity Notification{
    message String maxlength(1000),
    isRead Boolean,
    notificationDate Instant required
}

entity MonthlyBudget{
    amount BigDecimal
}

entity SavingGoal{
    targetAmount BigDecimal,
    currentAmount BigDecimal,
    targetDate LocalDate
}

entity ExpenseCategory{
    name String
}

entity Expense{
    amount BigDecimal,
    date Instant,
    description String maxlength(1000)
}


relationship ManyToOne{
    Report to User{reports} with builtInEntity
    Notification to User{notifications} with builtInEntity,
    MonthlyBudget to User{monthlyBudget} with builtInEntity,
    Expense to User{expenses} with builtInEntity
}

relationship OneToMany{
    ExpenseCategory to MonthlyBudget{expenseCategory}
    ExpenseCategory to Expense{expenseCategory}
}





